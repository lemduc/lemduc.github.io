---
layout: null
---
<?xml version="1.0" encoding="UTF-8"?>
<rss version="2.0" xmlns:atom="http://www.w3.org/2005/Atom" xmlns:dc="http://purl.org/dc/elements/1.1/">
  <channel>
    <title>{{ site.title }}</title>
    <description>{{ site.description }}</description>
    <link>{{ site.url }}{{ site.baseurl }}/</link>
    <atom:link href="{{ site.url }}{{ site.baseurl }}/feed.xml" rel="self" type="application/rss+xml"/>
    <language>en-us</language>
    <managingEditor>{{ site.author.email }} ({{ site.author.name }})</managingEditor>
    <webMaster>{{ site.author.email }} ({{ site.author.name }})</webMaster>
    <lastBuildDate>{{ site.time | date_to_rfc822 }}</lastBuildDate>
    <generator>Jekyll v{{ jekyll.version }}</generator>
    <copyright>Copyright {{ site.time | date: "%Y" }} {{ site.author.name }}</copyright>
    <docs>https://www.rssboard.org/rss-specification</docs>

    {% comment %} Combine and sort all items by date {% endcomment %}
    {% assign all_items = "" | split: "" %}

    {% comment %} Add updates {% endcomment %}
    {% assign updates = site.data.updates | default: site.updates | sort: 'date' | reverse %}
    {% for update in updates limit:15 %}
      {% assign item = update | jsonify | prepend: '{"type":"update",' | append: '}' %}
      {% assign all_items = all_items | push: item %}
    {% endfor %}

    {% comment %} Add publications {% endcomment %}
    {% assign publications = site.data.publications | default: site.publications | sort: 'date' | reverse %}
    {% for pub in publications limit:10 %}
      {% assign item = pub | jsonify | prepend: '{"type":"publication",' | append: '}' %}
      {% assign all_items = all_items | push: item %}
    {% endfor %}

    {% comment %} Process updates {% endcomment %}
    {% for update in updates limit:15 %}
    <item>
      <title>{{ update.title | xml_escape }}</title>
      <description><![CDATA[{{ update.content }}{% if update.link and update.link != "" %}<br/><br/><a href="{{ update.link }}">Read more</a>{% endif %}]]></description>
      <pubDate>{{ update.date | date_to_rfc822 }}</pubDate>
      {% if update.link and update.link != "" %}
      <link>{{ update.link }}</link>
      {% else %}
      <link>{{ site.url }}{{ site.baseurl }}/#latest-updates-section</link>
      {% endif %}
      <guid isPermaLink="false">{{ site.url }}/update/{{ update.date | date: "%Y%m%d" }}/{{ update.title | slugify }}</guid>
      <category>{{ update.type | capitalize | default: "Updates" }}</category>
      <dc:creator>{{ site.author.name }}</dc:creator>
    </item>
    {% endfor %}

    {% comment %} Process publications {% endcomment %}
    {% for pub in publications limit:10 %}
    <item>
      <title>{{ pub.title | xml_escape }}</title>
      <description><![CDATA[
        <strong>Authors:</strong> {{ pub.authors }}<br/>
        <strong>Venue:</strong> {{ pub.venue }}<br/>
        <strong>Type:</strong> {{ pub.type | capitalize }}
        {% if pub.pdf and pub.pdf != "" %}<br/><br/><a href="{{ pub.pdf }}">Download PDF</a>{% endif %}
      ]]></description>
      <pubDate>{{ pub.date | date_to_rfc822 }}</pubDate>
      {% if pub.pdf and pub.pdf != "" %}
      <link>{{ pub.pdf }}</link>
      {% else %}
      <link>{{ site.url }}{{ site.baseurl }}/#publications-section</link>
      {% endif %}
      <guid isPermaLink="false">{{ site.url }}/publication/{{ pub.date | date: "%Y%m%d" }}/{{ pub.title | slugify }}</guid>
      <category>Publications</category>
      <category>{{ pub.type | capitalize }}</category>
      <dc:creator>{{ pub.authors | split: "," | first | strip }}</dc:creator>
    </item>
    {% endfor %}
  </channel>
</rss>

