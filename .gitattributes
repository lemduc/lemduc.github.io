# Set default behavior to automatically normalize line endings
* text=auto

# Ruby files
*.rb text eol=lf
*.rake text eol=lf
Gemfile text eol=lf
Rakefile text eol=lf

# YAML files
*.yml text eol=lf
*.yaml text eol=lf

# Markdown files
*.md text eol=lf

# HTML/CSS/JS files
*.html text eol=lf
*.css text eol=lf
*.js text eol=lf

# Python files
*.py text eol=lf

# XML files
*.xml text eol=lf

# Binary files
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.pdf binary
